@model GradeBook.BLL.Zaposlenik
@{
    ViewBag.Title = "Novi zaposlenik";
    GradeBook.BLL.TipZaposlenikaList listaTipova = GradeBook.BLL.TipZaposlenikaList.Get();
    GradeBook.BLL.SkolaInfoList listaSkola = GradeBook.BLL.SkolaInfoList.Get();
    int a = 5;
}

<h2>Dodaj novog zaposlenika:</h2>

<form>
    @*<div class="form-group">
            <label for="IdTipa">ID tipa zaposlenika:</label>
            @Html.TextBoxFor(m => m.IdTipa, new { @class = "form-control", disabled = "disabled" })
        </div>*@
    <div class="form-group">
        <label for="Ime">Ime zaposlenika:</label>
        @Html.TextBoxFor(m => m.ImeZaposlenika, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Prezime">Prezime zaposlenika:</label>
        @Html.TextBoxFor(m => m.PrezimeZaposlenika, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="NazivTipa">Tip zaposlenika:</label>
        @Html.DropDownList("tip", new SelectList(listaTipova, "Key", "Value"), "Izaberi tip zaposlenika:", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="NazivTipa">Škola:</label>
        @Html.DropDownList("skola", new SelectList(listaSkola, "Key", "Value"), "Izaberi školu:", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="DatumPocetka">Datum početka rada:</label>
        @Html.TextBoxFor(m => m.DatumPocetkaRada, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Oib">OIB:</label>
        @Html.TextBoxFor(m => m.Oib, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="NazivTipa">E-mail adresa:</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Dodaj</button>
    @Html.ActionLink("Odustani", "Index", "Zaposlenik", new { }, new { @class = "btn btn-danger" })
</form>